{
  "name": "ShortcutsForMessenger-2", 
  "short_name": "S4M2",
  "description": "Shortcuts for messenger.com, second part",
  "version": "0.0.7",
  "permissions": [
    "activeTab", "https://www.messenger.com/*", "tabs"
  ],
  "icons": { 
    "16": "assets/icon-16.png",
    "24": "assets/icon-24.png",
    "32": "assets/icon-32.png",
    "128": "assets/icon-128.png" 
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.messenger.com/*"],
      "js": ["src/shortcuts.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "sticker": {
      "suggested_key": {
        "windows": "Ctrl + S",
        "mac": "MacCtrl + S",
        "chromeos": "Ctrl + S",
        "linux": "Ctrl + S"
      }, "description": "Send sticker"
    },
    "gif": {
      "suggested_key": {
        "windows": "Ctrl + G",
        "mac": "MacCtrl + G",
        "chromeos": "Ctrl + G",
        "linux": "Ctrl + G"
      }, "description": "Send GIF"
    }
  },
  "manifest_version": 2
}
